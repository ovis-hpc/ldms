cat << EOF > $1
JOBID=$jobid
UID=$uid
USER=fakeuser
APPID=$appid
EOF
((jobid++))
((uid+=1000))
((appid+=10))
}

function JOBDATA () {
if test "$#" = "1"; then
	job_vals $1
	return
fi
f=$1
shift
for i in $*; do
