# ovis auth set from command line

stream_enable
msg_enable

# look for L1
advertiser_add name=localhost${i}/L0 xprt=${XPRT} port=${port2} host=${HOST} reconnect=2s
advertiser_start name=localhost${i}/L0

load name=dstat
config name=dstat producer=localhost${i} instance=localhost${i}/dstat component_id=${i} perm=0644 mmalloc=1 io=1 fd=1 stat=1 statm=1 fdtypes=1
start name=dstat interval=3000000 offset=0
