# assume ovis auth set from command line

stream_enable
msg_enable

# we are L1 ;  advertise ourselves to L2
advertiser_add name=localhost${i}/L1 xprt=${XPRT} port=${port3} host=${HOST} reconnect=2s
advertiser_start name=localhost${i}/L1

load name=dstat
config name=dstat producer=localhost${i} instance=localhost${i}/dstat component_id=${i} perm=0644 mmalloc=1 io=1 fd=1 stat=1 statm=1 fdtypes=1
start name=dstat interval=3000000 offset=0

# expect to be advertised at by L0
prdcr_listen_add name=localhost${i}/L0 regex=.*
prdcr_listen_start name=localhost${i}/L0

# grab all sets upstream
updtr_add name=L0_updtr interval=1s auto_interval=true
updtr_prdcr_add name=L0_updtr regex=.*
updtr_start name=L0_updtr
