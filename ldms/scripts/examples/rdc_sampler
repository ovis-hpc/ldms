export plugname=rdc_sampler
portbase=61060
dschema=$(ldms_rdc_schema_name shape=1|grep -v ERR)
wschema=$(ldms_rdc_schema_name metrics=base|grep -v ERR)
export wschema
export dschema
DAEMONS $(seq 3)
LDMSD 3

VGARGS="--leak-check=full --track-origins=yes --trace-children=yes --show-leak-kinds=definite"
#vgon
LDMSD 2
vgoff
SLEEP 6
MESSAGE ldms_ls on host 2:
LDMS_LS 2 -vl
SLEEP 2
KILL_LDMSD 2

#vgon
LDMSD 1
vgoff
SLEEP 6
MESSAGE ldms_ls on host 1:
LDMS_LS 1 -vl
SLEEP 2
KILL_LDMSD 1

KILL_LDMSD 3

file_created $STOREDIR/node/$wschema
file_created $STOREDIR/node/$dschema
